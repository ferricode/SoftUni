@using TaxFairy.Core.ViewModels
@model IEnumerable<ContragentListViewModel>
@{
    ViewData["Title"]="Клиенти";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <a asp-action="create" asp-controller="contragent" class="btn btn-block btn-warning btn-lg">Добави клиент</a>
            <div class="card-header">
                <h3 class="card-title">Клиенти</h3>
                <div class="card-tools">
                    <div class="input-group input-group-sm" style="width: 150px;">
                        <input type="text" name="table_search" class="form-control float-right" placeholder="Search">
                        <div class="input-group-append">
                            <button type="submit" class="btn btn-default">
                                <i class="fas fa-search"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-body table-responsive p-0">
                <table class="table table-hover text-nowrap">
                    <thead>
                        <tr>
                            <th>Фирма</th>
                            <th>МОЛ</th>
                            <th>ЕИК</th>
                            <th>ДДС номер</th>
                            <th>Действие</th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var client in Model)
                        {
                            <tr>
                                <td>@client.Name</td>
                                <td>@client.АccountablePerson</td>
                                <td>@client.Identifier</td>
                                <td>@client.TaxIdentifier</td>
                                <td>
                                    <a asp-area="" asp-action="edit" asp-controller="contragent" asp-route-id="@client.Id" class="btn btn-block btn-warning btn-xs">Редакция</a>
                                    <a asp-area="" asp-action="details" asp-controller="contragent" asp-route-id="@client.Id" class="btn btn-block bg-gradient-success btn-xs">Детайли</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>

    </div>
</div>
