@using TaxFairy.Core.ViewModels
@model ContragentEditViewModel
@{
    ViewData["Title"] = "Детайли за клиент";
}
<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-body table-responsive p-0">
                <div class="card-body table-responsive p-0">
                    <table class="table table-hover text-nowrap">
                        <tr>
                            <th>Име на фирма</th>
                            <th>ЕИК /Единен идентификационен код/</th>
                            <th>ДДС номер</th>
                            <th>МОЛ /Материално отговорно лице/</th>
                            <th>Адрес</th>
                            <th>Телефонен номер</th>
                            <th>Email</th>
                        </tr>

                        <tr>
                            <td>@Model.Name</td>
                            <td>@Model.Identifier</td>
                            <td>@Model.TaxIdentifier</td>
                            <td>@Model.AccountablePerson</td>
                            <td>@Model.Address</td>
                            <td>@Model.PhoneNumber</td>
                            <td>@Model.Email</td>
                        </tr>

                    </table>

                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <a asp-action="manageContragents" asp-controller="contragent" class="btn btn-block btn-warning btn-lg">Върни се</a>
            </div>
        </div>
    </div>
</div>
