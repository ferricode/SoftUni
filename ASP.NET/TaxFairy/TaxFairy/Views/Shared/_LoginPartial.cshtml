@using Microsoft.AspNetCore.Identity
@using TaxFairy.Infrastructure.Data.Identity

<ul class="navbar-nav nav-pills nav-sidebar">
    @if (User.Identity?.IsAuthenticated ?? false)
    {
        <li class="nav-item">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Здравей @User.Identity?.Name!</a>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link " asp-area="Identity" asp-page="/Account/Register">
                <i class="fas fa-dharmachakra menu-item-icons"></i>
                <p>
                    &nbsp;&nbsp;   Регистрация
                </p>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link menu-item-icons" asp-area="Identity" asp-page="/Account/Login">
                <i class="fas fa-dove menu-item-icons"></i>
                <p>
                    &nbsp;&nbsp;  Вписване
                </p>
            </a>
        </li>

    }
</ul>