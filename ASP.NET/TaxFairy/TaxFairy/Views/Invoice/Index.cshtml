@using TaxFairy.Core.ViewModels
@model IEnumerable<InvoiceListViewModel>



@if (User.Identity?.IsAuthenticated==false)
{
    <p>
        За издаване на фактури, моля да се регистрирате безплатно като потребител от <a class="navbar-text" asp-area="Identity" asp-page="/Account/Register"> ТУК </a>
    </p>
}
else
{
    ViewData["Title"] = "Издадени фактури";

    <div class="container p-3">
        <div class="row pt-4">
            <div class="col-6">
                <h2 class="text-success">Издадени фактури от:</h2>
            </div>
            <div class="col-6 text-end">
                <a asp-controller="Invoice" asp-action="Create" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> &nbsp; Създай нова фактура
                </a>
            </div>
        </div>
        <br /><br />

        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Тип на документа
                    </th>
                    <th>
                        Фактура номер
                    </th>
                    <th>
                        Дата на издаване
                    </th>
                    <th>
                        Издадена на
                    </th>
                    <th>
                        Сума
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="25%">
                            @obj.InvoiceNumber
                        </td>
                        <td width="25%">
                            @obj.InvoiceNumber
                        </td>
                        <td width="10%">
                            @obj.IssueDate
                        </td>
                        <td width="25%">
                            @obj.ContragentName
                        </td>
                        <td width="10%">
                            @obj.TotalPrice
                        </td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="Invoice" asp-action="Edit" asp-route-id="@obj.Id"
                           class="btn btn-success mx-2"> <i class="bi bi-pencil-square"></i> Редакция</a>
                                <a asp-controller="Invoice" asp-action="Delete" asp-route-id="@obj.Id"
                           class="btn btn-danger mx-2"> <i class="bi bi-trash-fill"></i> Изтриване</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>

        </table>
    </div>
}

