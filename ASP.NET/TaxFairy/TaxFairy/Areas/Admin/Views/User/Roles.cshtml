@using TaxFairy.Core.ViewModels
@model UserRolesViewModel
@{
    ViewData["Title"] = "Роли на потребители";
    var items = (List<SelectListItem>)ViewBag.RoleItems;
}

<div class="row">
    <div class="col-4">
        <form id="roles" method="post">
            <input type="hidden" name="UserId" value="@Model.UserId" />
            <input type="hidden" name="Name" value="@Model.UserName" />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <h2>Потребител: @Html.DisplayFor(m => m.UserName)</h2>
            </div>
            <div class="form-floating">
                <div class="form-group">
                    <label>Роли:</label>
                    <select asp-for="RoleNames" asp-items="@items" class="form-control">
                    </select>
                </div>
            </div>
            <div class="row">&nbsp;</div>
            <div class="row">
                <div class="col-4">
                    <button id="login-submit" type="submit" class="btn btn-success btn-block">Потвърди</button>
                </div>
                <!-- /.col -->
            </div>
        </form>
    </div>
</div>